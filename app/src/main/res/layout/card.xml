<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view = "http://schemas.android.com/apk/res-auto"
    xmlns:android = "http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="200dp"
    android:layout_height="200dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    card_view:cardPreventCornerOverlap="true"
    android:layout_margin="5dp">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/foodImage"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_weight="0.8"
        android:scaleType="centerCrop"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/shape_bg_white_rounded_rect" />

    <com.aeshian.cardtest.components.TypedfacedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sample Food Item"
        android:id="@+id/FoodName"
        android:layout_below="@+id/foodImage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        card_view:typeface="@string/light_font"
        android:textSize="16dp" />


    <com.aeshian.cardtest.components.TypedfacedTextView
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:text="$999.000"
        android:id="@+id/FoodPrice"
        android:layout_below="@+id/foodImage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:textSize="17dp"
        android:textColor="#ffa9ff0f"
        android:padding="0dp"
        android:layout_marginBottom="30dp"
        card_view:typeface="@string/normal_font"
        android:textStyle="bold" />
</LinearLayout>

</android.support.v7.widget.CardView>